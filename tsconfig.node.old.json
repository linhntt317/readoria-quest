{
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "outDir": "./.tsbuild/node",

    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "include": ["vite.config.ts", "next.config.js", "middleware.ts", "scripts/**/*.js", "scripts/**/*.mjs", "scripts/**/*.ts"],
  "exclude": ["node_modules"]
}
